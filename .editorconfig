root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length=160

[.gitkeep]
insert_final_newline = false

[*.bat]
end_of_line = crlf

[*.html]
insert_final_newline = false

[*.xml]
max_line_length = off
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
